{
  "manifest_version": 3,
  "name": "LLM Tab Grouper",
  "description": "Automatically groups open tabs using Google Gemini and user-provided API key.",
  "version": "1.0.0",
  "permissions": ["storage", "tabs", "tabGroups"],
  "host_permissions": ["https://generativelanguage.googleapis.com/*"],
  "action": {
    "default_title": "LLM Tab Grouper",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
